<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pos.store.morphsys.com.morphsysstoreapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera.any" />

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode,face" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/morphsys"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/morphsys"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity" android:icon="@drawable/login"/>

        <activity
            android:name=".activities.BarcodeCaptureActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activities.DBCreateActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".activities.RegistrationActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activities.ProductsRetrievalActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <activity
            android:name=".activities.ViewCartActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activities.CheckoutActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activities.AllProductsViewActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activities.ViewAllCartsActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".activities.ViewSpecificCartActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>